@if (Session["LoggedUserName"] != null)
{
    using (Html.BeginForm())
    {
    @Html.AntiForgeryToken()

    <ul class="nav navbar-nav navbar-right">
        <li>
            @Html.ActionLink("Bine ai venit, " + Session["LoggedUserName"].ToString() + "!", "Index", "Manage", routeValues: null, htmlAttributes: new { title = "Manage" })
        </li>

        <li>@Html.ActionLink("Delogare", "LogOff", "Account", routeValues: null, htmlAttributes: new { id = "logingOffLink" })</li>
        <li>@Html.ActionLink("Comanda mea", "Index", "Order")</li>
    </ul>
    }
}
else
{
    <ul class="nav navbar-nav navbar-right">
        <li>@Html.ActionLink("Inregistrare", "Register", "Account", routeValues: null, htmlAttributes: new { id = "registerLink" })</li>
        <li>@Html.ActionLink("Logare", "Login", "Account", routeValues: null, htmlAttributes: new { id = "loginLink" })</li>
    </ul>
}
